<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="afcc.taavi.kase.afcc" >

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".AverageFuelConsumptionActivity"
            android:label="@string/app_name"
            android:parentActivityName=".BaseActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="afcc.taavi.kase.afcc.BaseActivity" />
        </activity>
        <activity
            android:name=".SettingsActivity"
            android:label="@string/app_name"
            android:parentActivityName=".BaseActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="afcc.taavi.kase.afcc.BaseActivity" />
        </activity>
        <activity
            android:name=".AverageSpeedActivity"
            android:label="@string/app_name"
            android:parentActivityName=".BaseActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="afcc.taavi.kase.afcc.BaseActivity" />
        </activity>
        <activity
            android:name=".SpeedometerActivity"
            android:label="@string/app_name"
            android:parentActivityName=".BaseActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="afcc.taavi.kase.afcc.BaseActivity" />
        </activity>

        <provider
            android:name=".AFCCProvider"
            android:authorities="kase.taavi.averagefuelconsumption" >
        </provider>

        <activity
            android:name=".AboutActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name=".PreviousResultsActivity"
            android:label="@string/app_name" >
        </activity>
    </application>

</manifest>