<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="afcc.taavi.kase.afcc.activity.AboutActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/versionText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:text="@string/version" />

        <TextView
            android:id="@+id/versionNumberText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/aboutText"
            android:layout_toRightOf="@+id/versionText"
            android:layout_toEndOf="@+id/versionText"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp" />

        <TextView
            android:id="@+id/aboutText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/versionText"
            android:layout_marginTop="10dp"
            android:text="@string/about" />

        <TextView
            android:id="@+id/settings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/aboutText"
            android:layout_marginTop="10dp"
            android:text="@string/settings"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/settingsText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/settings"
            android:text="@string/settings_text" />

        <TextView
            android:id="@+id/afcc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/settingsText"
            android:layout_marginTop="10dp"
            android:text="@string/afcc"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/afccText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/afcc"
            android:text="@string/afcc_text" />

        <TextView
            android:id="@+id/previousResults"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/afccText"
            android:layout_marginTop="10dp"
            android:text="@string/previous_results"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/previousResultsText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/previousResults"
            android:text="@string/previous_results_text" />

        <TextView
            android:id="@+id/averageSpeed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/previousResultsText"
            android:layout_marginTop="10dp"
            android:text="@string/average_speed_calculator"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/averageSpeedText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/averageSpeed"
            android:text="@string/average_speed_calculator_text" />

        <TextView
            android:id="@+id/speedometer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/averageSpeedText"
            android:layout_marginTop="10dp"
            android:text="@string/speed"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/speedometerText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/speedometer"
            android:text="@string/speedometer_text" />
    </RelativeLayout>
</ScrollView>
