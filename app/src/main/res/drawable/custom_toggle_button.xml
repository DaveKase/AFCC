<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="true">
        <shape>
            <gradient android:angle="270" android:endColor="@color/button_color" android:startColor="@color/button_color" />
            <stroke android:width="3dp" android:color="@color/button_color" />
            <corners android:radius="30dp" />
        </shape>
    </item>

    <item android:state_checked="false">
        <shape>
            <gradient android:angle="270" android:endColor="@color/button_pressed_color" android:startColor="@color/button_pressed_color" />
            <stroke android:width="3dp" android:color="@color/button_pressed_color" />
            <corners android:radius="30dp" />
        </shape>
    </item>
</selector>
